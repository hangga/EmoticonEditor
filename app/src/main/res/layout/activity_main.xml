<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context="com.hangga.emot.MainActivity$PlaceholderFragment" >

    <EditText
        android:id="@+id/textPost"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:background="#FFFFFFFF"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="top|left"
        android:inputType="textFilter|textMultiLine|textNoSuggestions|textCapSentences|textNoSuggestions"
        android:lines="100"
        android:maxLines="1000"
        android:minLines="6" 
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical|horizontal"
        android:selectAllOnFocus="true"
        android:singleLine="false"
        android:textColor="#FF000000"
        android:textCursorDrawable="@null"
        android:textSize="14sp"
        android:textStyle="normal"
        android:windowSoftInputMode="adjustResize" />
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:background="#C7C3b8"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btnEmot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/smile"
            />
    </LinearLayout>

</RelativeLayout>
